extends default

block content
    .container.p-3.my-5
        h1 #{title}

        hr

        each group in tvShows
            .border.mb-4.p-4
                h3.mb-5 #{group}
                .row
                    - for (let season of Object.keys(m3uData[group])) {
                        .text-center.mb-4.col-12.col-md-6.col-lg-4
                            .card(style="width: 18rem;")
                                img.card-img-top(src=m3uData[group][season][0].tvg.logo alt="Logo")
                                .card-body 
                                    h5.card-title #{season}

                    - }

